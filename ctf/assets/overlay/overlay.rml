<rml>
<head>
<title>Overlay</title>
<style>
    body
    {
        position: absolute;
        top: 0px;
        left: 0px;
        height: 100%;
        width: 100%;
        z-index: 0;
    }

    b
    {
        font-weight: bold;
    }

    div
    {
        font-family: DroidSans;
        font-weight: bold;
        font-size: 24;
        text-align: center;
        color: rgba(250, 10, 250, 250);
        background-color: rgba(50, 50, 50, 150);
    }

    .notification
    {
        display: block;
        bottom: 0px;
        width: 100%;
        font-size: 14;
        background-color: rgba(27, 7, 90, 200);
        padding: 8px0px8px0px;
    }

    .layer-info-label
    {
        height: 50px;
        line-height: 50px;
        text-align: center;
        font-size: 28;
        font-weight: bold;

        padding-left: 8px;
        padding-right: 8px;

        margin-left: 8px;
        margin-top: 8px;

        border-width: 0px;
        border-color: rgba(27, 7, 90, 200);
        z-index: -1;
    }

    .centered-info-box
    {
        font-weight: bold;
        padding: 25px;
        position: absolute;
        width: 20%;
        right: 40%;
        top: 45%;
        border-width: 0px;
        border-color: rgba(27, 7, 90, 200);
        font-size: 30;
        text-align: center;
    }

    .node-info-label
    {
        padding: 10px;
        border-width: 2px;
        border-color: rgba(222, 222, 222, 255);
        font-family: DroidSans;
        font-weight: bold;
        font-size: 18;
        text-align: center;
        background-color: rgba(50, 50, 50, 210);
    }

    .base-label
    {
        font-family: DroidSans;
        font-weight: bold;
        font-size: 24;
        text-transform: uppercase;
        color: black;
        text-align: center;
        background-color: rgba(0, 0, 0, 0);
    }

    .bot-label
    {
        font-size: 14;
        font-family: Inconsolata;
        color: black;
        text-align: center;
        background-color: rgba(0, 0, 0, 0);
    }

    .timer-label
    {
        font-size: 18;
        font-family: Inconsolata;
        font-weight: bold;
        color: white;
        position: absolute;
        bottom: 0;
        left: 0;
        background-color: rgba(0, 0, 0, 0);
    }

    .info-popup
    {
        font-size: 14;
        font-weight: bold;
        text-align: left;

        margin: 10px;
        padding: 10px;

        background-color: rgba(50, 50, 50, 200);

        z-index: 999;
    }

    .pop-ln
    {
        display: block;
        width: 248px;
    }

    .pop-ln .left-col
    {
        display: inline-block;
        float: left;
        width: 72px;
        text-align: right;
        padding-right: 16px;
    }

    .pop-ln .right-col
    {
        display: inline-block;
        width: 144px;
        float: left;
        color: rgba(200, 200, 200, 255);
    }

    .modal-fullscreen
    {
        display: block;
        background-color: rgba(100, 100, 100, 100);

        // BUG: libRocket does not handle the top pixel when in absolute positioning with 100%.
        position: absolute;
        top: -1px;
        left: -1px;
        width: 101%;
        height: 101%;
    }

    .info-text-window-content
    {
        display: block;
        margin: auto;
        width: 800px;
        height: 420px;
        border-width: 0px;
        border-color: rgba(27, 7, 90, 220);
        background-color: rgba(0, 0, 0, 0);
        font-size: 14;
        text-align: left;
    }

    .info-text-window-title-bar
    {
        display: block;
        height: 50px;
        width: 100%;
        background-color: rgba(27, 7, 90, 200);
        line-height: 50px;
        font-size: 28;
        text-align: center;
    }

    .info-text-window-content-area
    {
        display: block;
        width: 100%;
        height: 370px;
        background-color: rgba(40, 40, 40, 200);
        color: rgba(200, 200, 200, 255);
    }

    .info-text-window-text-area
    {
        display: block;
        padding: 15px;
    }

    .info-text-window-section-header
    {
        display: block;
        line-height: 40px;
        font-size: 20;
        color: white;
    }

    .info-text-bullet-point
    {
        display: block;
        width: 100%;
    }

    .control-keys-modal-window-content
    {
        display: block;
        margin:auto;
        width: 800px;
        height: 400px;
        border-width: 0px;
        border-color: rgba(27, 7, 90, 200);
        background-color: rgba(0, 0, 0, 0);
        font-size: 14;
        text-align: left;
    }

    .control-keys-title-bar
    {
        display: block;
        height: 50px;
        width: 100%;
        background-color: rgba(27, 7, 90, 200);
        line-height: 50px;
        font-size: 28;
        text-align: center;
    }

    .control-keys-sections
    {
        display: block;
        width: 100%;
        height: 350px;
        background-color: rgba(50, 50, 50, 150);
    }

    .control-keys-section-horizontal
    {
        display: block;
        float:left;
        width: 399px;
        height: 100%;
    }

    .section-border-left
    {
        border-left-width: 0px;
        border-left-color: rgba(27, 7, 90, 200);
    }

    .control-keys-section-vertical
    {
        display: block;
        float:left;
        width: 100%;
    }

    .section-title
    {
        height: 40px;
        line-height: 40px;
        text-align: center;
        font-size: 20;
        display: block;
        width: 100%;
        background-color: rgba(35, 38, 35, 220);
    }

    .section-content
    {
        padding: 10px;
        display: block;
        font-weight: normal;
    }

    .section-entry
    {
        display: block;
        line-height: 22px;
    }

    .section-entry-left-column
    {
        display: block;
        width: 15%;
        float: left;
    }
    .section-entry-right-column
    {
        display: block;
        width: 85%;
        float: left;
    }

</style>
</head>
<body>
</body>
</rml>
